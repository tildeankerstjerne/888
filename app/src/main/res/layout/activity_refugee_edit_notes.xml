<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RefugeeEditNotes">


    <Button
        android:id="@+id/button_back_edit_notes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="307dp"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/text_noteactivity_editnotes"
        android:layout_width="146dp"
        android:layout_height="32dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="133dp"
        android:layout_marginBottom="29dp"
        android:text="@string/note_refugee_notes"
        android:textColor="#D66850"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="92dp"
        android:layout_height="80dp"
        android:layout_marginStart="154dp"
        android:layout_marginTop="113dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/text_noteactivity_editnotes"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/notebook" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="262dp"
        android:layout_height="450dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="100dp"

        android:id="@+id/textView2"
        android:layout_width="235dp"
        android:layout_height="69dp"
        android:text="Edit Note"
        android:textSize="34sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_noteactivity_editnotes">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_note1date_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/dato_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_note1time_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/tidspunkt_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />
        </TableRow>

        <TextView
            android:id="@+id/text_edit1note_editnotes"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="her sætter vi ind at den kan redigeres. "
            android:textColor="#515050"
            android:textSize="12sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_note2date_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/dato_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_note2time_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/tidspunkt_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />
        </TableRow>

        <TextView
            android:id="@+id/text_edit2note_editnotes"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="her sætter vi ind at den kan redigeres. "
            android:textColor="#515050"
            android:textSize="12sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_note3date_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/dato_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_note3time_editnotes"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@string/tidspunkt_refugee_notes"
                android:textColor="#D66850"
                android:textSize="12sp" />
        </TableRow>

        <TextView
            android:id="@+id/text_edit3note_editnotes"
            android:layout_width="150dp"
            android:layout_height="80dp"
            android:text="her sætter vi ind at den kan redigeres. "
            android:textColor="#515050"
            android:textSize="12sp" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>

    <Button
        android:id="@+id/button_save_editnotes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="129dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="16dp"
        android:text="save changes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />



        android:text="Tilbage"
        tools:layout_editor_absoluteX="36dp"
        tools:layout_editor_absoluteY="630dp" />

</androidx.constraintlayout.widget.ConstraintLayout>